{
  "name": "go-actions-scripts",
  "version": "1.0.0",
  "description": "TypeScript scripts for Go Actions",
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "ncc build scripts-dist/release-action.js -o scripts-dist/release-action-bundle && ncc build scripts-dist/ci-action.js -o scripts-dist/ci-action-bundle && ncc build scripts-dist/self-validate.js -o scripts-dist/self-validate-bundle",
    "clean": "rm -rf scripts-dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@vercel/ncc": "^0.38.3",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0"
  }
}
