{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./scripts-dist",
    "rootDir": "./scripts",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", "scripts-dist"]
}